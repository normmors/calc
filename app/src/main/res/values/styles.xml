<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonRow">
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">1dp</item>

    </style>


    <style name="buttonNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">25sp</item>

        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>

<!--        <item name="android:onClick">numberAct</item>-->


    </style>


    <style name="buttonOperation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
<!--        <item name="android:onClick">numberAct</item>-->

    </style>


    <style name="buttonOperationEqual">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>

    </style>


</resources>